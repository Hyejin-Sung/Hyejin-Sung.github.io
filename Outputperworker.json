{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Hyejin-Sung/Hyejin-Sung.github.io/refs/heads/main/Outputperworker.csv",
    "format": {"type": "csv"}
  },
  "title": {"text": "UK Productivity 1960-2023"},
  "width": 500,
  "height": 300,
  "mark": {"type": "line", "color": "red"},

  "transform": [
    {
      "calculate": "datum.Year",
      "as": "Year"
    },
    {
      "calculate": "datum.Outputperworker",
      "as": "Outputperworker"
    },
    {"filter": "datum.Year >= minYear"},
    {"filter": "datum.Year <= maxYear"}
  ],

  "params": [
    {
      "name": "minYear", "value": 1960,
      "bind": {
        "input": "range",
        "min": 1960,
        "max": 2023,
        "step": 1,
        "name": "Start year:"
      }
    },
    {
      "name": "maxYear", "value": 2023,
      "bind": {
        "input": "range",
        "min": 1960,
        "max": 2023,
        "step": 1,
        "name": "End year:"
      }
    }
  ],

  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",   // Change from temporal to ordinal to treat years as categories
      "axis": {
        "format": "d",     // Ensure that years are displayed as whole numbers
        "title": null
      }
    },
    "y": {
      "field": "Outputperworker",
      "type": "quantitative",
      "title": "Output per worker"
    }
  }
}
